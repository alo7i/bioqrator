<h1>Listing nodes</h1>

<table>
  <tr>
    <th>Node text</th>
    <th>Annotation key</th>
    <th>Annotation type</th>
    <th>Node</th>
    <th>Node type</th>
    <th>Document</th>
    <th>Passage</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @nodes.each do |node| %>
  <tr>
    <td><%= node.node_text %></td>
    <td><%= node.entity_key %></td>
    <td><%= node.entity_type_id %></td>
    <td><%= node.node_id %></td>
    <td><%= node.node_type %></td>
    <td><%= node.document_id %></td>
    <td><%= node.passage_id %></td>
    <td><%= link_to 'Show', node %></td>
    <td><%= link_to 'Edit', edit_node_path(node) %></td>
    <td><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

