<div class="modal hide fade" id="uploadModal">
  <% 
  if @collection.nil? 
    url = upload_collections_path
  else
    url = upload_collection_path(@collection)
  end
  %>
  <%= form_tag(url, :multipart => true, id: "bioc_upload_form") do %>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="myModalLabel">Select a BioC File</h3>
    </div>
    <div class="modal-body">
      <p>
        <input type="file" name="upload" placeholder="BioC file">
      </p>
    </div>
    <div class="modal-footer">
      <a href="#" class="btn" data-dismiss="modal" >Close</a>
      <%=submit_tag "Upload", :class => "btn btn-primary", :disable_with => "Uploading..."%>
    </div>
  <% end %>
</div>
<script type="text/javascript">
$("#bioc_upload_form").on("submit", function() {
  var filename = $("#bioc_upload_form input[type=file]").val();
  if (!filename || filename.length == 0) {
    alert("Please select a file");
    return false;
  }
  return true;
});
</script>